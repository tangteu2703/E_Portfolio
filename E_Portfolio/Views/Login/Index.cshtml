@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Tang 03</title>
    <link href="~/assets/img/logo/logo_t.png" rel="icon" />

    <!-- Bootstrap CSS -->
    <link href="~/assets/lib/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        /* Background image */
        body {
            background: url('https://picsum.photos/1600/1200') no-repeat center center fixed;
            background-size: cover;
        }

        /* Overlay effect */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        /* Centered login box */
        .login-container {
            position: relative;
            z-index: 1;
            max-width: 400px;
            margin: 100px auto;
            padding: 30px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }

            .login-container img {
                width: 120px;
                height: 120px;
                border-radius: 50%; /* Bo tròn */
                object-fit: cover; /* Giữ ảnh không bị méo */
            }

    </style>
</head>
<body>

    <div class="overlay"></div>

    <div class="container">
        <div class="login-container">

            <!-- Logo -->
            <div class="text-center">
                <img src="~/assets/img/logo/logo_t.png" alt="Logo" class="mb-2">
                <h3 class="text-center mb-4">Login</h3>
            </div>

            <form>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email" autocomplete="email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" placeholder="Enter your password" autocomplete="current-password">
                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                </div>
                <div class="d-grid">
                    <label id="errorMessage" class="text-danger d-none">Sai tài khoản hoặc mật khẩu</label>
                    <button type="button" id="loginBtn" onclick="login()" class="btn btn-primary">
                        Login
                    </button>
                </div>

                <div class="text-center mt-3">
                    <a href="#">Forgot password?</a>
                </div>
                <hr />

                <!-- Nút đăng nhập với Google -->
                <div class="text-center mt-3">
                    <button class="btn btn-outline-danger d-flex align-items-center justify-content-center gap-2 w-100" id="googleLogin">
                        <i class="bi bi-google"></i> Login with Google
                    </button>
                </div>

                <!-- Nút đăng nhập với Facebook -->
                <div class="text-center mt-2">
                    <button class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-2 w-100" id="facebookLogin">
                        <i class="bi bi-facebook"></i> Login with Facebook
                    </button>
                </div>

              
            </form>
        </div>
    </div>

    <script src="~/assets/lib/bootstrap.bundle.min.js"></script>
    <script src="~/assets/lib/jquery-3.7.1.min.js"></script>
    <script src="~/assets/lib/sweetalert2@11.js"></script>

    <script src="~/assets/js/helper/commonfunction.js"></script>
    <script src="~/assets/js/helper/apihelper.js"></script>
    <script src="~/assets/js/authen/login.js"></script>

</body>
</html>
