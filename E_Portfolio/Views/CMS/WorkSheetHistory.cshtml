@{
    Layout = "~/Views/Shared/_Layout_CMS.cshtml";
    ViewData["Title"] = "E - WorkSheet";
}

<div class="app-main flex-column flex-row-fluid " id="kt_app_main">
    <!--begin::Content wrapper-->
    <div class="d-flex flex-column flex-column-fluid">

        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar  pt-5 ">

            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container  container-fluid d-flex align-items-stretch ">
                <!--begin::Toolbar wrapper-->
                <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">

                    <!--begin::Page title-->
                    <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
                        <!--begin::Breadcrumb-->
                        <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">

                            <!--begin::Item-->
                            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                                <a href="/CMS" class="text-gray-500 text-hover-primary">
                                    <i class="ki-duotone ki-home fs-3 text-gray-500 me-n1"></i>
                                </a>
                            </li>
                            <!--end::Item-->
                            <!--begin::Item-->
                            <li class="breadcrumb-item">
                                <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                            </li>
                            <!--end::Item-->
                            <!--begin::Item-->
                            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                                Quản lý công
                            </li>
                            <!--end::Item-->
                            <!--end::Item-->
                            <!--begin::Item-->
                            <li class="breadcrumb-item">
                                <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                            </li>
                            <!--end::Item-->
                            <!--begin::Item-->
                            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                                Chấm công
                            </li>
                            <!--end::Item-->
                        </ul>
                        <!--end::Breadcrumb-->
                        <!--begin::Title-->
                        <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bolder fs-1 lh-0">
                            Chấm công
                        </h1>
                        <!--end::Title-->
                    </div>
                    <!--end::Page title-->
                    <div class="dropdown w-150px me-3">
                        <button id="dropdownExcelAction" class="btn btn-sm btn-light w-100 dropdown-toggle text-start" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Excel
                        </button>
                        <ul class="dropdown-menu w-100">
                            <li><a class="dropdown-item" onclick="importClick()" data-value="import">Import Excel</a></li>
                            <li><a class="dropdown-item" onclick="exportClick()" data-value="export">Export Excel</a></li>
                            <input type="file" id="inputImage" accept="image/*" style="display:none;" onchange="onImageSelected(event)">
                        </ul>
                    </div>
                </div>
                <!--end::Toolbar wrapper-->
            </div>
            <!--end::Toolbar container-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content  flex-column-fluid ">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container  container-fluid ">
                <!--begin::Card-->
                <div class="card">
                    <!--begin::Card header-->
                    <div class="card-header border-0 pt-6 pb-0">
                        <div class="row w-100 gx-3 gy-2 align-items-end">
                            <!-- Tìm kiếm -->
                            <div class="col-sm-6 col-md-5">
                                <label for="txt_Search" class="form-label fw-bold mb-1">Tìm kiếm</label>
                                <div class="position-relative">
                                    <i class="ki-duotone ki-magnifier fs-3 position-absolute top-50 translate-middle-y ms-3"></i>
                                    <input type="text" id="txt_Search" class="form-control form-control-sm ps-13 form-control-solid" placeholder="Nhập từ khóa...">
                                </div>
                            </div>

                            <!-- Từ ngày -->
                            <div class="col-sm-3 col-md-1">
                                <label for="txt_FromDate" class="form-label fw-bold mb-1">Từ ngày</label>
                                <input type="date" id="txt_FromDate" class="form-control form-control-sm form-control-solid">
                            </div>

                            <!-- Đến ngày -->
                            <div class="col-sm-3 col-md-1">
                                <label for="txt_ToDate" class="form-label fw-bold mb-1">Đến ngày</label>
                                <input type="date" id="txt_ToDate" class="form-control form-control-sm form-control-solid">
                            </div>

                            <!-- Phòng ban -->
                            <div class="col-sm-3 col-md-2">
                                <label for="cbo_Dept" class="form-label fw-bold mb-1">Phòng ban</label>
                                <select id="cbo_Dept" class="form-select form-select-sm form-select-solid">
                                    <option value="">Tất cả</option>
                                </select>
                            </div>

                            <!-- Ca làm -->
                            <div class="col-sm-3 col-md-2">
                                <label for="cbo_Shift" class="form-label fw-bold mb-1">Trạng thái</label>
                                <select id="cbo_Shift"
                                        class="form-select form-select-sm form-select-solid"
                                        data-control="select2" data-allow-clear="true">
                                    <option value="">Tất cả</option>
                                    <option value="001">Ca ngày</option>
                                    <option value="002">Ca đêm</option>
                                    <option value="003">Đi muộn</option>
                                    <option value="004">Về sớm</option>
                                    <option value="005">Thiếu In</option>
                                    <option value="006">Thiếu Out</option>
                                </select>
                            </div>

                            <!-- Nút tìm kiếm -->
                            <div class="col-sm-3 col-md-1">
                                <label class="form-label fw-bold mb-1 invisible">Tìm kiếm</label>
                                <button type="button" id="btn_Search" onclick="searchClick()" class="btn btn-sm btn-primary w-100">
                                    <i class="ki-duotone ki-search fs-4 me-1"></i> Tìm kiếm
                                </button>
                            </div>
                        </div>
                    </div>
                    <!--end::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body py-4">
                        <!--begin::Table-->
                        <div id="kt_table_users_wrapper" class="dt-container dt-bootstrap5 dt-empty-footer">
                            <div id="" class="table-responsive">
                                <table id="worksheet_table" class="table table-sm table-hover align-middle table-row-dashed fs-8 gy-2 dataTable" style="width: 100%;">
                                    <thead>
                                        <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0" role="row">
                                            <th class="w-10px pe-2 dt-orderable-none" data-dt-column="0" rowspan="1" colspan="1" aria-label="">
                                                <span class="dt-column-title">
                                                    <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                                        <input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_table_users .form-check-input" value="1">
                                                    </div>
                                                </span>
                                                <span class="dt-column-order"></span>
                                            </th>
                                            <th>Nhân viên</th>
                                            <th>Bộ phận</th>
                                            <th>Ngày công</th>
                                            <th>Giờ vào</th>
                                            <th>Giờ ra</th>
                                            <th>Ca làm việc</th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-gray-600 fw-semibold">
                                    </tbody>
                                    <tfoot></tfoot>
                                </table>
                            </div>
                        </div>
                        <!--end::Table-->
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Card-->
            </div>
            <!--end::Content container-->
        </div>
        <!--end::Content-->
    </div>
    <!--end::Content wrapper-->
</div>

<div id="kt_activities" class="bg-body drawer drawer-end" data-kt-drawer="true" data-kt-drawer-name="activities" data-kt-drawer-activate="true" data-kt-drawer-overlay="true"
     data-kt-drawer-width="{default:'500px', 'lg': '700px'}" data-kt-drawer-direction="end" data-kt-drawer-toggle="#kt_activities_toggle" data-kt-drawer-close="#kt_activities_close">

    <div class="card shadow-none border-0 rounded-0">
        <!--begin::Header-->
        <div class="card-header" id="kt_activities_header">
            <h3 class="card-title fw-bold text-gray-900">Lịch sử In/ Out</h3>

            <div class="card-toolbar">
                <button type="button" class="btn btn-sm btn-icon btn-active-light-primary me-n5" id="kt_activities_close">
                    <i class="ki-duotone ki-cross fs-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </button>
            </div>
        </div>
        <!--end::Header-->
        <!--begin::Body-->
        <div class="card-body position-relative" id="kt_activities_body">
            <!--begin::Content-->
            <div id="kt_activities_scroll" class="position-relative scroll-y me-n5 pe-5" data-kt-scroll="true" data-kt-scroll-height="auto"
                 data-kt-scroll-wrappers="#kt_activities_body" data-kt-scroll-dependencies="#kt_activities_header, #kt_activities_footer"
                 data-kt-scroll-offset="5px" style="height: 700px;">

                <div id="" class="table-responsive">
                    <table id="zktbio_table" class="table table-sm table-hover align-middle table-row-dashed fs-8 gy-2 dataTable" style="width: 100%;">
                        <thead>
                            <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0" role="row">
                                <th>Mã nhân viên</th>
                                <th>Trạng thái</th>
                                <th>Ngày tháng</th>
                                <th>Khu vực</th>
                                <th>Thiết bị</th>
                                <th>Ngày cập nhật</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-600 fw-semibold">
                        </tbody>
                        <tfoot></tfoot>
                    </table>
                </div>
            </div>
            <!--end::Content-->
        </div>
        <!--end::Body-->
        <!--begin::Footer-->
        <div class="card-footer py-5 text-center" id="kt_activities_footer">
            <a href="http://192.168.7.28:8081" target="_blank">
                View All
                <i class="ki-duotone ki-arrow-right fs-3 text-primary">
                    <span class="path1"></span><span class="path2"></span>
                </i>
            </a>
        </div>
        <!--end::Footer-->
    </div>
</div>

@section Scripts {
    <script src="~/root/worksheet/worksheethistory.js"></script>
}