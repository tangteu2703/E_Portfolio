@{
    Layout = "~/Views/Shared/_Layout_CMS.cshtml";
    ViewData["Title"] = "E - Device Request";
}

@section Styles {
    <link href="~/assetscms/css/device/device-request.css" rel="stylesheet" />
}

<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <!-- Toolbar -->
        <div id="kt_app_toolbar" class="app-toolbar pt-5">
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                    <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
                        <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">
                            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                                <a href="/CMS" class="text-gray-500 text-hover-primary">
                                    <i class="ki-duotone ki-home fs-3 text-gray-500 me-n1"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item"><i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i></li>
                            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">Thiết bị</li>
                            <li class="breadcrumb-item"><i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i></li>
                            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">Yêu cầu thiết bị</li>
                        </ul>
                        <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bolder fs-1 lh-0">Yêu cầu thiết bị</h1>
                    </div>
                    <div class="d-flex mb-4">
                        <button type="button" class="btn btn-sm btn-success me-2" id="btn_new_request">
                            <i class="ki-duotone ki-plus fs-4"></i> Create
                        </button>
                        <button type="button" class="btn btn-sm btn-light-primary me-2" onclick="window.print()">
                            <i class="ki-duotone ki-printer fs-4"></i> Print
                        </button>
                        <button type="button" class="btn btn-sm btn-light-primary">
                            <i class="ki-duotone ki-file-down fs-4"></i> Export PDF
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content -->
        <div id="kt_app_content" class="app-content flex-column-fluid ps-0">
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="row">
                    <div class="row">
                        <!-- Filters -->
                        <div class="card-header border-0">
                            <div class="w-100">
                                <div class="d-flex gap-2 mb-3 flex-wrap">
                                    <button class="btn btn-sm btn-light-primary filter-tab active" data-filter="all">All <span class="badge badge-sm badge-circle badge-primary ms-1" id="count_all">0</span></button>
                                    <button class="btn btn-sm btn-light-warning filter-tab" data-filter="Request">Request <span class="badge badge-sm badge-circle badge-warning ms-1" id="count_accept">0</span></button>
                                    <button class="btn btn-sm btn-light-info filter-tab" data-filter="Approved">Approved <span class="badge badge-sm badge-circle badge-info ms-1" id="count_approved">0</span></button>
                                    <button class="btn btn-sm btn-light-success filter-tab" data-filter="Confirm">Confirm <span class="badge badge-sm badge-circle badge-success ms-1" id="count_confirm">0</span></button>
                                    <button class="btn btn-sm btn-light-primary filter-tab" data-filter="Ongoing">Ongoing <span class="badge badge-sm badge-circle badge-primary ms-1" id="count_ongoing">0</span></button>
                                    <button class="btn btn-sm btn-light-dark filter-tab" data-filter="Done">Done <span class="badge badge-sm badge-circle badge-dark ms-1" id="count_closed">0</span></button>
                                    <button class="btn btn-sm btn-light-danger filter-tab" data-filter="Rejected">Rejected <span class="badge badge-sm badge-circle badge-danger ms-1" id="count_rejected">0</span></button>
                                </div>
                                <div class="position-relative row">
                                    <input type="text" id="txt_search_request" class="col-md-9 form-control form-control-sm ps-5" placeholder="Type here to search...">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Resizable Split Layout using Bootstrap classes -->
                    <div class="d-flex split-container" id="split_container" style="height: calc(100vh - 18rem); overflow: hidden;">
                        <!-- Left: Filters and Request List -->
                        <div class="split-panel flex-fill overflow-hidden position-relative" style="min-width: 25rem;" id="split_left">
                            <!-- Request List -->
                            <div class="card card-flush h-100">
                                <div class="card-body pt-3 px-0 overflow-auto" id="request_list_container">
                                    <!-- Dynamic list will be rendered here -->
                                </div>
                            </div>
                        </div>

                        <!-- Resizer Handle -->
                        <div class="split-resizer d-flex align-items-center justify-content-center" id="split_resizer">
                            <div class="resizer-handle rounded">
                                <i class="ki-duotone ki-setting-3 fs-2 text-muted"></i>
                            </div>
                        </div>

                        <!-- Right: Request Detail -->
                        <div class="split-panel flex-fill overflow-hidden position-relative" style="min-width: 25rem;" id="split_right">
                            <div class="card card-flush h-100">
                                <div class="card-header border-0 pt-5">
                                    <h3 class="card-title align-items-start flex-column">
                                        <span class="card-label fw-bold text-gray-800" id="detail_request_code">Select a request</span>
                                        <span class="text-muted mt-1 fw-semibold fs-7" id="detail_request_title"></span>
                                    </h3>
                                    <div class="card-toolbar d-flex flex-wrap gap-2 justify-content-end">
                                        <!-- Critical Actions (Approve/Reject/Delete) -->
                                        <div class="btn-group" role="group" aria-label="Critical actions">
                                            <button class="btn btn-sm btn-danger d-none" id="btn_reject" title="Reject Request" aria-describedby="reject-help">
                                                Reject
                                            </button>
                                            <button class="btn btn-sm btn-success d-none" id="btn_approve" title="Approve Request" aria-describedby="approve-help">
                                                Approve
                                            </button>
                                            <button class="btn btn-sm btn-light d-none" id="btn_delete" title="Delete Request" aria-describedby="delete-help">
                                                Cancel
                                            </button>
                                            <button class="btn btn-sm btn-primary" id="btn_view" title="View Details" aria-describedby="view-help">
                                                View
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body pt-0 overflow-auto" id="request_detail_container">
                                    <div class="text-center text-muted py-10">
                                        <i class="ki-duotone ki-document fs-3x text-gray-400"><span class="path1"></span><span class="path2"></span></i>
                                        <p class="mt-3">Select a request from the list to view details</p>
                                    </div>
                                </div>

                                <!-- Progress Footer -->
                                <div class="card-footer border-top py-4 d-none" id="progress_container">
                                    <div class="d-flex align-items-center justify-content-between position-relative">
                                        <!-- Step A -->
                                        <div class="flex-fill text-center position-relative" data-step="1">
                                            <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light text-muted fw-bold position-relative" style="width: 2.5rem; height: 2.5rem; z-index: 2;" data-step-icon="1">A</div>
                                            <div class="mt-2 small text-muted">REQUEST</div>
                                            <div class="small text-muted">By requester</div>
                                        </div>
                                        <!-- Step B -->
                                        <div class="flex-fill text-center position-relative" data-step="2">
                                            <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light text-muted fw-bold position-relative" style="width: 2.5rem; height: 2.5rem; z-index: 2;" data-step-icon="2">B</div>
                                            <div class="mt-2 small text-muted">ADMIT</div>
                                            <div class="small text-muted">By manager</div>
                                        </div>
                                        <!-- Step C -->
                                        <div class="flex-fill text-center position-relative" data-step="3">
                                            <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light text-muted fw-bold position-relative" style="width: 2.5rem; height: 2.5rem; z-index: 2;" data-step-icon="3">C</div>
                                            <div class="mt-2 small text-muted">ACCEPTANCE</div>
                                            <div class="small text-muted">By IT manager</div>
                                        </div>
                                        <!-- Step D -->
                                        <div class="flex-fill text-center position-relative" data-step="4">
                                            <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light text-muted fw-bold position-relative" style="width: 2.5rem; height: 2.5rem; z-index: 2;" data-step-icon="4">D</div>
                                            <div class="mt-2 small text-muted">COMPLETION</div>
                                            <div class="small text-muted">By assigned IT</div>
                                        </div>
                                        <!-- Step E -->
                                        <div class="flex-fill text-center position-relative" data-step="5">
                                            <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light text-muted fw-bold position-relative" style="width: 2.5rem; height: 2.5rem; z-index: 2;" data-step-icon="5">E</div>
                                            <div class="mt-2 small text-muted">CONFIRMATION</div>
                                            <div class="small text-muted">By requester</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal: Create/Edit Request -->
<div class="modal fade" id="modal_request_form" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modal_form_title">Create New Request</h3>
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
            </div>
            <div class="modal-body">
                <!-- Section A: Request Info -->
                <div class="bg-light-primary border-start border-primary border-3 px-3 py-2 fw-bold mb-4">
                    A. The field for incharge of publication department
                </div>
                <div class="row g-3 mb-5">
                    <div class="col-md-6">
                        <label class="form-label required">Receive department</label>
                        <input type="text" class="form-control form-control-sm" id="form_receive_dept" placeholder="IT">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required">Request No</label>
                        <input type="text" class="form-control form-control-sm" id="form_request_no" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required">Title</label>
                        <input type="text" class="form-control form-control-sm" id="form_title" placeholder="ĐĂNG KÝ SỬ DỤNG WIFI">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label required">Publication date</label>
                        <input type="date" class="form-control form-control-sm" id="form_pub_date">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label required">Deadline date</label>
                        <input type="date" class="form-control form-control-sm" id="form_deadline">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required">Request department</label>
                        <input type="text" class="form-control form-control-sm" id="form_req_dept" placeholder="QUALITY CONTROL">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required">Incharge</label>
                        <input type="text" class="form-control form-control-sm" id="form_incharge" placeholder="Email">
                    </div>
                    <div class="col-12">
                        <label class="form-label required">Request content</label>
                        <textarea class="form-control form-control-sm" id="form_content" rows="3" placeholder="HRGA-F2312-V1_Internet_Access_Request"></textarea>
                    </div>
                </div>

                <!-- Section B: Equipment Table -->
                <div class="bg-light-primary border-start border-primary border-3 px-3 py-2 fw-bold mb-4">
                    B. Equipment Details
                </div>
                <div class="table-responsive mb-5">
                    <table class="table table-sm table-row-bordered align-middle" id="tbl_equipment">
                        <thead>
                            <tr class="fw-bold text-muted bg-light">
                                <th class="text-center" style="width:50px">No.</th>
                                <th style="width:150px">Staff NV/ID</th>
                                <th style="width:200px">Name</th>
                                <th style="width:180px">Equipment</th>
                                <th>Purpose</th>
                                <th style="width:60px">
                                    <button type="button" class="btn btn-sm btn-icon btn-light-primary" id="btn_add_equipment">
                                        <i class="ki-duotone ki-plus fs-4"></i>
                                    </button>
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

                <!-- Section C: Attachments -->
                <div class="bg-light-primary border-start border-primary border-3 px-3 py-2 fw-bold mb-4">
                    C. Attachments
                </div>
                <div class="mb-3">
                    <input type="file" class="form-control form-control-sm" id="form_attachments" multiple>
                    <div class="form-text">Upload related documents (PDF, DOC, XLS, IMG)</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light btn-sm" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success btn-sm" id="btn_save_request">
                    <i class="ki-duotone ki-check fs-4"></i> Save Request
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Hidden help text for screen readers -->
<div class="visually-hidden">
    <div id="view-help">View detailed information about the selected request</div>
    <div id="edit-help">Edit the selected request details</div>
    <div id="approve-help">Approve the selected request to proceed to next step</div>
    <div id="reject-help">Reject the selected request with a reason</div>
    <div id="delete-help">Delete the selected request (cannot be undone)</div>
</div>

@section Scripts {
    <script src="~/root/device/devicerequest.js"></script>
}
