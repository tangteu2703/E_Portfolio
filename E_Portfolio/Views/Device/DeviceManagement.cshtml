@{
    Layout = "~/Views/Shared/_Layout_CMS.cshtml";
    ViewData["Title"] = "E - WorkSheet";
}

<div class="app-main flex-column flex-row-fluid " id="kt_app_main">
    <!--begin::Content wrapper-->
    <div class="d-flex flex-column flex-column-fluid">

        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar  pt-5 ">

            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container  container-fluid d-flex align-items-stretch ">
                <!--begin::Toolbar wrapper-->
                <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">

                    <!--begin::Page title-->
                    <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
                        <!--begin::Breadcrumb-->
                        <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">

                            <!--begin::Item-->
                            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                                <a href="/CMS" class="text-gray-500 text-hover-primary">
                                    <i class="ki-duotone ki-home fs-3 text-gray-500 me-n1"></i>
                                </a>
                            </li>
                            <!--end::Item-->
                            <!--begin::Item-->
                            <li class="breadcrumb-item">
                                <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                            </li>
                            <!--end::Item-->
                            <!--begin::Item-->
                            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                                Thiết bị
                            </li>
                            <!--end::Item-->
                            <!--end::Item-->
                            <!--begin::Item-->
                            <li class="breadcrumb-item">
                                <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                            </li>
                            <!--end::Item-->
                            <!--begin::Item-->
                            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                                Quản lý thiết bị
                            </li>
                            <!--end::Item-->
                        </ul>
                        <!--end::Breadcrumb-->
                        <!--begin::Title-->
                        <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bolder fs-1 lh-0">
                            Quản lý thiết bị
                        </h1>
                        <!--end::Title-->
                    </div>
                    <!--end::Page title-->
                    <div class="dropdown w-150px me-3">
                        <button id="dropdownExcelAction" class="btn btn-sm btn-light w-100 dropdown-toggle text-start" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Excel
                        </button>
                        <ul class="dropdown-menu w-100">
                            <li><a class="dropdown-item" onclick="sampleClick()" data-value="import">Sample File</a></li>
                            <li><a class="dropdown-item" onclick="importClick()" data-value="import">Import Excel</a></li>
                            <li><a class="dropdown-item" onclick="exportClick()" data-value="export">Export Excel</a></li>
                        </ul>
                        <input type="file" id="file_Import" accept=".xlsx" style="display: none;" onchange="onFileSelected(event)">
                    </div>
                </div>
                <!--end::Toolbar wrapper-->
            </div>
            <!--end::Toolbar container-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content  flex-column-fluid ">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container container-fluid ">
                <!--begin::Card-->
                <div class="card">
                    <!--begin::Card header-->
                    <div class="card-header border-0 pt-6 pb-0">
                        <div class="row w-100 gx-3 gy-2 align-items-end">
                            <!-- Tìm kiếm -->
                            <div class="col-sm-6 col-md-5">
                                <label for="txt_Search" class="form-label fw-bold mb-1">Tìm kiếm</label>
                                <div class="position-relative">
                                    <i class="ki-duotone ki-magnifier fs-3 position-absolute top-50 translate-middle-y ms-3"></i>
                                    <input type="text" id="txt_Search" class="form-control form-control-sm ps-13 form-control-solid" placeholder="Nhập từ khóa...">
                                </div>
                            </div>

                            <div class="col-sm-3 col-md-2">
                                <label for="cbo_Type" class="form-label fw-bold mb-1">Phân loại</label>
                                <select id="cbo_Type" class="form-select form-select-sm form-select-solid">
                                    <option value="0">Tất cả</option>
                                </select>
                            </div>

                            <!-- Ca làm -->
                            <div class="col-sm-3 col-md-2">
                                <label for="cbo_Status" class="form-label fw-bold mb-1">Trạng thái</label>
                                <select id="cbo_Status"
                                        class="form-select form-select-sm form-select-solid"
                                        data-control="select2" data-allow-clear="true">
                                    <option value="0">Tất cả</option>
                                    <option value="1">Đang sử dụng</option>
                                    <option value="2">Chưa cấp phát</option>
                                    <option value="3">Không xác định</option>
                                    <option value="4">Hỏng</option>
                                </select>
                            </div>

                            <!-- Nút tìm kiếm -->
                            <div class="col-sm-3 col-md-1">
                                <label class="form-label fw-bold mb-1 invisible">Tìm kiếm</label>
                                <button type="button" id="btn_Search" onclick="searchClick()" class="btn btn-sm btn-primary w-100">
                                    <i class="ki-duotone ki-search fs-4 me-1"></i> Tìm kiếm
                                </button>
                            </div>
                        </div>
                    </div>
                    <!--end::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body py-4">
                        <!--begin::Table-->
                        <div id="kt_table_users_wrapper" class="dt-container dt-bootstrap5 dt-empty-footer">
                            <div id="" class="table-responsive">
                                <table id="device_table" class="table table-sm table-hover align-middle table-row-dashed fs-8 gy-2 dataTable" style="width: 100%;">
                                    <thead>
                                        <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0" role="row">
                                            <th class="w-10px pe-2 dt-orderable-none" data-dt-column="0" rowspan="1" colspan="1" aria-label="">
                                                <span class="dt-column-title">
                                                    <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                                        <input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_table_users .form-check-input" value="1">
                                                    </div>
                                                </span>
                                                <span class="dt-column-order"></span>
                                            </th>
                                            <th>Phân loại</th>
                                            <th>Mã thiết bị</th>
                                            <th>Tên thiết bị</th>
                                            <th>Số lượng</th>
                                            <th>Thông tin thiết bị</th>
                                            <th>Người sử dụng</th>
                                            <th>Tình trạng</th>
                                            <th>Ghi chú</th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-gray-600 fw-semibold">
                                    </tbody>
                                    <tfoot></tfoot>
                                </table>
                            </div>
                        </div>
                        <!--end::Table-->
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Card-->
            </div>
            <!--end::Content container-->
        </div>
        <!--end::Content-->
    </div>
    <!--end::Content wrapper-->
</div>

<div id="kt_details" class="bg-body drawer drawer-end" data-kt-drawer="true"
     data-kt-drawer-name="activities" data-kt-drawer-activate="true"
     data-kt-drawer-overlay="true"
     data-kt-drawer-width="{default:'300px', 'lg': '650px'}"
     data-kt-drawer-direction="end"
     data-kt-drawer-toggle="#kt_activities_toggle"
     data-kt-drawer-close="#kt_activities_close">

    <div class="card shadow-none border-0 rounded-0">
        <!-- Header -->
        <div class="card-header" id="kt_activities_header">
            <h3 class="card-title fw-bold text-gray-900">Chỉnh sửa thông tin</h3>
            <div class="card-toolbar">
                <button type="button" class="btn btn-sm btn-icon btn-active-light-primary me-n5" id="kt_activities_close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </button>
            </div>
        </div>

        <!-- Body -->
        <div class="card-body position-relative" id="kt_activities_body">
            <div id="kt_activities_scroll" class="position-relative scroll-y pe-5"
                 data-kt-scroll="true"
                 data-kt-scroll-height="auto"
                 data-kt-scroll-wrappers="#kt_activities_body"
                 data-kt-scroll-dependencies="#kt_activities_header, #kt_activities_footer"
                 data-kt-scroll-offset="5px"
                 style="height: 700px;">

                <div class="card card-flush h-lg-100" id="kt_contacts_main">
                    <div class="card-body pt-5">
                        <!-- Avatar + Thông tin -->
                        <div class="d-flex gap-7 align-items-center">
                            <div class="symbol symbol-circle symbol-100px">
                                <img id="avatar_kt" src="https://picsum.photos/200/300" alt="image">
                            </div>
                            <div class="d-flex flex-column gap-2">
                                <h3 id="username_kt" class="mb-0">Emma Smith</h3>
                                <div class="d-flex align-items-center gap-2">
                                    <a href="#" class="text-muted text-hover-primary" id="usercode_kt">+567</a>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <a href="#" class="text-muted text-hover-primary" id="dept_kt">IT Team</a>
                                </div>
                            </div>
                        </div>

                        <!-- Tabs -->
                        <ul class="nav nav-custom nav-tabs nav-line-tabs nav-line-tabs-2x fs-6 fw-semibold mt-6 mb-8 gap-2" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a class="nav-link text-active-primary d-flex align-items-center pb-4 active"
                                   data-bs-toggle="tab" href="#kt_view_general" aria-selected="true" role="tab">
                                    <i class="ki-duotone ki-home fs-4 me-1"></i> Thông tin
                                </a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link text-active-primary d-flex align-items-center pb-4"
                                   data-bs-toggle="tab" href="#kt_view_history" aria-selected="false" tabindex="-1" role="tab">
                                    <i class="ki-duotone ki-calendar-8 fs-4 me-1"></i> Lịch sử In/Out
                                </a>
                            </li>
                        </ul>

                        <!-- Tab nội dung -->
                        <div class="tab-content" id="kt_tabs_content">
                            <!-- Thông tin -->
                            <div class="tab-pane fade show active" id="kt_view_general" role="tabpanel">
                                <div class="row">
                                    <!-- Giờ vào / Giờ ra -->
                                    <div class="col-md-6 my-3">
                                        <label class="form-label fw-semibold">Giờ vào <span class="text-danger">*</span></label>
                                        <input id="dat_TimeIn" type="datetime-local" class="form-control form-control-sm form-control-solid" value="">
                                    </div>
                                    <div class="col-md-6 my-3">
                                        <label class="form-label fw-semibold">Giờ ra <span class="text-danger">*</span></label>
                                        <input id="dat_TimeOut" type="datetime-local" class="form-control form-control-sm form-control-solid" value="">
                                    </div>

                                    <!-- Giờ thiếu / Tiêu chuẩn -->
                                    <div class="col-md-6 my-3">
                                        <label class="form-label fw-semibold">Giờ thiếu</label>
                                        <input type="number" step="0.1" min="0" value="0" class="form-control form-control-sm form-control-solid">
                                    </div>
                                    <div class="col-md-6 my-3">
                                        <label class="form-label fw-semibold">Giờ tiêu chuẩn</label>
                                        <input type="number" step="0.1" min="0" value="0" class="form-control form-control-sm form-control-solid">
                                    </div>

                                    <!-- OT: Ngày thường -->
                                    <div class="col-12 mt-5">
                                        <div class="fs-6 fw-bold mb-2 border-bottom">Tăng ca ngày thường</div>
                                        <div class="row g-3">
                                            <div class="col-md-6 col-lg-4">
                                                <label class="form-label">OT 150%</label>
                                                <input type="number" step="0.1" min="0" value="0" class="form-control form-control-sm form-control-solid">
                                            </div>
                                            <div class="col-md-6 col-lg-4">
                                                <label class="form-label">OT 210%</label>
                                                <input type="number" step="0.1" min="0" value="0" class="form-control form-control-sm form-control-solid">
                                            </div>
                                            <div class="col-md-6 col-lg-4">
                                                <label class="form-label">OT 200%</label>
                                                <input type="number" step="0.1" min="0" value="0" class="form-control form-control-sm form-control-solid">
                                            </div>
                                        </div>
                                    </div>

                                    <!-- OT: Ngày nghỉ -->
                                    <div class="col-12 mt-5">
                                        <div class="fs-6 fw-bold mb-2 border-bottom">Tăng ca ngày nghỉ</div>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label class="form-label">OT 200%</label>
                                                <input type="number" step="0.1" min="0" value="0" class="form-control form-control-sm form-control-solid">
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">OT 270%</label>
                                                <input type="number" step="0.1" min="0" value="0" class="form-control form-control-sm form-control-solid">
                                            </div>
                                        </div>
                                    </div>

                                    <!-- OT: Ngày lễ -->
                                    <div class="col-12 mt-5">
                                        <div class="fs-6 fw-bold mb-2 border-bottom">Tăng ca ngày lễ</div>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label class="form-label">OT 300%</label>
                                                <input type="number" step="0.1" min="0" value="0" class="form-control form-control-sm form-control-solid">
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">OT 390%</label>
                                                <input type="number" step="0.1" min="0" value="0" class="form-control form-control-sm form-control-solid">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Lịch sử -->
                            <div class="tab-pane fade" id="kt_view_history" role="tabpanel">
                                <div class="table-responsive">
                                    <table id="zktbio_table" class="table table-sm table-hover align-middle table-row-dashed fs-8 gy-2 w-100">
                                        <thead>
                                            <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                                                <th>Trạng thái</th>
                                                <th>Ngày tháng</th>
                                                <th>Khu vực</th>
                                                <th>Thiết bị</th>
                                                <th>Ngày cập nhật</th>
                                            </tr>
                                        </thead>
                                        <tbody class="text-gray-600 fw-semibold"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- End tab content -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="card-footer py-5" id="kt_activities_footer">
            <div class="d-flex justify-content-end">
                <button type="button" onclick="saveDetail()" class="btn btn-primary" data-kt-contacts-type="submit">
                    <span class="indicator-label">Lưu</span>
                    <span class="indicator-progress">
                        Đang lưu...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/root/device/devicemanagement.js"></script>
}