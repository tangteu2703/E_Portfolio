<style>
    /* Thêm hiệu ứng tăng kích thước khi hover */
    .transition-transform {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Lớp này áp dụng hiệu ứng phóng to khi hover */
    .transform-hover:hover {
        transform: scale(1.2); /* Tăng kích thước lên 20% khi hover */
    }

        .transform-hover:hover .bg-white {
            transform: scale(1.1); /* Thêm hiệu ứng phóng to nhẹ cho nền chứa icon */
        }

        .transform-hover:hover .img-fluid {
            transform: scale(1.3); /* Tăng kích thước của icon khi hover */
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center g-4">
        @{
            var apps = new[] {
                new { Link="/Portal", Icon="portal.png", Name="Portal" },
                new { Link="/CMS", Icon="content.png", Name="CMS" },
                new { Link="/Portal/Portfolio", Icon="portfolio.png", Name="Portfolio" },
                new { Link="/CMS/Calendar", Icon="calendar.png", Name="Calendar" },
                new { Link="/CMS/Tasks", Icon="task.png", Name="Tasks" },
                new { Link="/CMS/Reports", Icon="combo-chart--v1.png", Name="Reports" },
                new { Link="/CMS/Chats", Icon="chat.png", Name="iChats" },
                new { Link="/CMS/users", Icon="user-group-man-man.png", Name="Users" },
                new { Link="/CMS/Admin", Icon="admin-settings-male.png", Name="Admin" },
            };
        }

        @foreach (var app in apps)
        {
            <div class="col-4 col-sm-4 col-md-3 col-lg-2 d-flex flex-column align-items-center">
                <a href="@app.Link" class="text-decoration-none text-center w-100">
                    <div class="bg-white rounded-4 p-3 shadow d-flex justify-content-center align-items-center mx-auto transition-transform transform-hover" style="width: 80px; height: 80px;">
                        <img src="https://img.icons8.com/ios-filled/100/000000/@app.Icon" alt="@app.Name" class="img-fluid transition-transform transform-hover" />
                    </div>
                    <div class="mt-2 text-dark fw-semibold transition-transform transform-hover" style="min-height: 40px;">@app.Name</div>
                </a>
            </div>
        }
    </div>
</div>
