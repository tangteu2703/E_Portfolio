<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Tang 03</title>
    <link href="~/assets/img/logo/logo_t.png" rel="icon" />

    <!-- Bootstrap CSS -->
    <link href="~/assets/lib/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        /* Background image */
        body {
            background: url('https://picsum.photos/1600/1200') no-repeat center center fixed;
            background-size: cover;
        }

        /* Overlay effect */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        /* Centered login box */
        .login-container {
            position: relative;
            z-index: 1;
            max-width: 400px;
            margin: 100px auto;
            padding: 30px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }

            .login-container img {
                width: 120px;
                height: 120px;
                border-radius: 50%; /* Bo tròn */
                object-fit: cover; /* Giữ ảnh không bị méo */
            }

    </style>
</head>
<body>

    <div class="container">
        @RenderBody()
    </div>

    <script src="~/assets/lib/bootstrap.bundle.min.js"></script>
    <script src="~/assets/lib/jquery-3.7.1.min.js"></script>
    <script src="~/assets/lib/sweetalert2@11.js"></script>

    <script src="~/root/helper/apihelper.js"></script>
    <script src="~/root/helper/commonfunction.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
