@{
    Layout = "~/Views/Shared/_Layout_Sale.cshtml";
}

@section Styles {
    <link href="~/root/sale/sale.css" rel="stylesheet" />
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold mb-0">
                <i class="bi bi-receipt-cutoff me-2"></i>Quản lý đơn hàng
            </h2>
        </div>
        <div class="col-auto">
            <a href="/Sale" class="btn btn-primary">
                <i class="bi bi-cart-plus me-2"></i>Tạo đơn mới
            </a>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label small fw-semibold">Từ ngày</label>
                    <input type="date" class="form-control" id="fromDate">
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-semibold">Đến ngày</label>
                    <input type="date" class="form-control" id="toDate">
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-semibold">Trạng thái</label>
                    <select class="form-select" id="statusFilter">
                        <option value="">Tất cả</option>
                        <option value="completed">Hoàn thành</option>
                        <option value="pending">Đang xử lý</option>
                        <option value="cancelled">Đã hủy</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-semibold">Tìm kiếm</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Mã đơn, khách hàng...">
                        <button class="btn btn-primary" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4 py-3 fw-semibold">Mã đơn</th>
                            <th class="py-3 fw-semibold">Thời gian</th>
                            <th class="py-3 fw-semibold">Khách hàng</th>
                            <th class="py-3 fw-semibold">Sản phẩm</th>
                            <th class="py-3 fw-semibold text-end">Tổng tiền</th>
                            <th class="py-3 fw-semibold">Thanh toán</th>
                            <th class="py-3 fw-semibold">Trạng thái</th>
                            <th class="py-3 fw-semibold text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i <= 10; i++)
                        {
                            <tr>
                                <td class="px-4 py-3">
                                    <span class="badge bg-primary">HD2025@(1000 + i)</span>
                                </td>
                                <td class="py-3">
                                    <div class="small">@DateTime.Now.AddHours(-i).ToString("dd/MM/yyyy")</div>
                                    <div class="text-muted small">@DateTime.Now.AddHours(-i).ToString("HH:mm")</div>
                                </td>
                                <td class="py-3">
                                    <div class="fw-semibold">@(i % 2 == 0 ? "Khách lẻ" : $"Khách hàng {i}")</div>
                                    <div class="text-muted small">@(i % 2 == 0 ? "" : $"0{900 + i}xxx{i}xxx")</div>
                                </td>
                                <td class="py-3">
                                    <span class="badge bg-info">@(i + 1) sản phẩm</span>
                                </td>
                                <td class="py-3 text-end">
                                    <span class="fw-bold text-primary">@((i * 150000).ToString("N0")) đ</span>
                                </td>
                                <td class="py-3">
                                    @if (i % 3 == 0)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-cash me-1"></i>Tiền mặt</span>
                                    }
                                    else if (i % 3 == 1)
                                    {
                                        <span class="badge bg-info"><i class="bi bi-credit-card me-1"></i>Thẻ</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning"><i class="bi bi-phone me-1"></i>MoMo</span>
                                    }
                                </td>
                                <td class="py-3">
                                    <span class="badge bg-success">Hoàn thành</span>
                                </td>
                                <td class="py-3 text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-primary" title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-info" title="In hóa đơn">
                                            <i class="bi bi-printer"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger" title="Hủy đơn">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top-0">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Hiển thị 1-10 của 100 đơn hàng
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#"><i class="bi bi-chevron-left"></i></a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#"><i class="bi bi-chevron-right"></i></a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set default dates
            const today = new Date();
            const weekAgo = new Date(today.getTime() - 7 * 24 * 60 * 60 * 1000);
            
            $('#toDate').val(today.toISOString().split('T')[0]);
            $('#fromDate').val(weekAgo.toISOString().split('T')[0]);
        });
    </script>
}

